{{> header}}
 <h1 class="white-thing">Register</h1>
        <p class="form-info">Already registered?
            <a  class='navigation-link-updated' href="/login">Login now</a> and have some fun!
        </p>
<form action="/register" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Repeat password</label>
    <input type="password" class="form-control" id="exampleInputPassword2"  placeholder="Password" name="rePassword">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
{{> footer}}			