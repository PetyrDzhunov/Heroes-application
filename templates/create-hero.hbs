{{> header}}
<div class="create-hero-container">
	<div class="create-hero-div">
	<form action="/create-hero" method="POST">
	<span id="heroes-span" for="heroes">Choose a hero:</span>
	<select  class='select-hero' name="hero" id="hero">
		<option value="barbarian">Barbarian</option>
		<option value="mage">Mage</option>
		<option value="hunter">Hunter</option>
		<option value="priest">Priest</option>
		<option value="rogue">Rogue</option>
	</select>
	<div id="gender-div" for="gender">Gender : 
	<select name="gender" id="gender">
		<option value="male">male</option>
		<option value="female">female</option>
	</select>
	</div>
	<br><br>
	<input type="text" name="name" id="hero-name">
	<input type="submit" value="Submit">
	</form>
	</div>
</div>
{{> footer}}

